      <hr class="clearfix w-100 d-md-none pb-3">

      <!-- Grid column -->
      
    <!-- Grid row -->
  </div>
  <!-- Footer Links -->

  <!-- Copyright -->
  <div class="footer-copyright text-center py-3">© 2021 Copyright:
    <a href="https://mdbootstrap.com/"> LibraryApp.com</a>
  </div>
